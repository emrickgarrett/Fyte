<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="220dp"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/fitness_full_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:hint="Garrett Emrick"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorAccent"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/fitness_weight_chart"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/fitness_full_name"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/fitness_chart_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Your Weight"
        android:layout_below="@id/fitness_weight_chart"
        android:fontFamily="sans-serif"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/fitness_weight_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:hint="-1.5lbs"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"/>

    <View
        android:id="@+id/home_profile_separator_view"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        />


</RelativeLayout>